{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "Launch Program",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "node",
            "args": [
                "webpack/build.js"
            ]
        },
        {
            "name": "Debug Main Process",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "program": "${workspaceRoot}/out/main.js"
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach"
        }
    ]
}
